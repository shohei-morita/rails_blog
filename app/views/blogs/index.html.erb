<h2>ブログ一覧</h2>
<%= notice %>
<table>
  <th>タイトル</th>
  <th>内容</th>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), data: {confirm: '本当に削除してもよろしいですか？'}, method: :delete %></td>
  </tr>
<% end %>
</table>

<br><%= link_to 'ブログ作成画面へ！', new_blog_path %></br>
